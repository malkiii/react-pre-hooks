{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Library",
  "extends": "./base.json",
  "compilerOptions": {
    "outDir": "dist",
    "module": "CommonJS",
    "declaration": true,
    "skipLibCheck": true,
    "inlineSources": false,
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true
  }
}
