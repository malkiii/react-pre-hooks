{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "allowJs": true,
    "noEmit": true,
    "baseUrl": "."
  },
  "exclude": ["node_modules", "dist", "jest-config.js"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
