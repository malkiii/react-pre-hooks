{
  "name": "realtime-hooks",
  "version": "1.1.4",
  "description": "Simplify and clean up your components with this react hooks collection.",
  "author": {
    "name": "Malki Abdurrahman",
    "email": "malki.abdurrahmane@gmail.com"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "homepage": "https://malkiii.github.io/realtime-hooks",
  "files": [
    "dist/"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/malkiii/realtime-hooks"
  },
  "bugs": {
    "url": "https://github.com/malkiii/realtime-hooks/issues"
  },
  "scripts": {
    "build": "rm -rf dist/ && CONFIG=\"tsconfig.build.json\" && tsc -p $CONFIG && tsc --outDir dist/esm -p $CONFIG",
    "prebuild": "pnpm lint && bash package/export-hooks.sh",
    "format": "prettier --write package/**/*.{ts,tsx}",
    "lint": "eslint package --ext ts,tsx --cache",
    "test": "vitest run --coverage",
    "test:watch": "clear && vitest watch",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "postversion": "node -pe \"require('./package.json').version\" | xargs -I {} git tag v{} && git push --tags",
    "prepublish": "pnpm test && pnpm build && pnpm postversion"
  },
  "sideEffects": false,
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.1.0",
    "@testing-library/react": "^14.0.0",
    "@types/node": "^20.3.3",
    "@types/react": "^18.0.37",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.2.1",
    "@vitest/coverage-v8": "^0.32.2",
    "eslint": "^8.48.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^22.1.0",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.0.2",
    "vite-tsconfig-paths": "^4.2.0",
    "vitepress": "1.0.0-rc.13",
    "vitest": "^0.34.6"
  },
  "dependencies": {
    "fast-deep-equal": "^3.1.3"
  },
  "peerDependencies": {
    "react": ">=18.2.0",
    "react-dom": ">=18.2.0"
  },
  "packageManager": "pnpm@8.6.2",
  "engines": {
    "node": ">=17"
  },
  "keywords": [
    "react",
    "hooks",
    "react-hooks",
    "react-use",
    "library",
    "use",
    "frontend",
    "next",
    "ts",
    "js"
  ]
}
