{
  "private": true,
  "type": "module",
  "scripts": {
    "prebuild": "pnpm lint && pnpm generate:exports",
    "build": "pnpm prebuild && cd packages/hooks && pnpm build",
    "lint": "tsc --noEmit && eslint --ext ts,tsx --cache",
    "test": "cd packages/hooks && pnpm test",
    "test:watch": "cd packages/hooks && pnpm test:watch",
    "format": "prettier --write package/**/*.{ts,tsx}",
    "docs:dev": "cd docs && pnpm dev",
    "docs:build": "cd docs && pnpm build",
    "generate:exports": "node scripts/export-hooks.cjs",
    "generate:readme": "node scripts/create-readme-table.cjs",
    "postversion": "pnpm test && pnpm build && pnpm generate:readme && bash scripts/post-version.sh"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.1.0",
    "@repo/typescript-config": "workspace:*",
    "@testing-library/react": "^14.0.0",
    "@types/node": "^20.3.3",
    "@types/react": "^18.2.76",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.2.1",
    "@vitest/coverage-v8": "^0.32.2",
    "eslint": "^8.48.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^22.1.0",
    "marked": "^12.0.0",
    "prettier": "^3.0.3",
    "typescript": "^5.0.2",
    "vitest": "^0.32.2"
  },
  "packageManager": "pnpm@8.6.2",
  "engines": {
    "node": ">=17"
  }
}
