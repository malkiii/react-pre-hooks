{
  "name": "workspace",
  "private": true,
  "type": "module",
  "description": "The ultimate react hooks library that can saves you a lot of work",
  "author": {
    "name": "Malki Abdurrahman",
    "email": "malki.abdurrahmane@gmail.com"
  },
  "license": "MIT",
  "scripts": {
    "build": "rm -rf dist/ && tsc && vite build",
    "test": "vitest run --coverage",
    "test:watch": "vitest watch",
    "format": "prettier --write packages",
    "lint": "eslint packages --ext ts,tsx --report-unused-disable-directives",
    "prepublish": "node -pe \"require('./packages/hooks/package.json').version\" | echo \"v$(cat)\" | xargs -I {} git tag {} && git push --tags"
  },
  "sideEffects": false,
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.1.0",
    "@types/node": "^20.3.3",
    "@types/react": "^18.0.37",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/coverage-v8": "^0.32.2",
    "eslint": "^8.38.0",
    "jsdom": "^22.1.0",
    "prettier": "^2.8.8",
    "typescript": "^5.0.2",
    "vite": "^4.3.9",
    "vite-plugin-banner": "^0.7.0",
    "vite-plugin-dts": "^3.0.2",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.32.2"
  },
  "peerDependencies": {
    "react": ">=18.2.0",
    "react-dom": ">=18.2.0"
  },
  "packageManager": "pnpm@8.6.2",
  "engines": {
    "node": ">=16"
  }
}
