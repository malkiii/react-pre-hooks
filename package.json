{
  "name": "realtime-hooks",
  "version": "0.0.0",
  "type": "module",
  "description": "The ultimate react hooks to simplify and clean up your components.",
  "author": {
    "name": "Malki Abdurrahman",
    "email": "malki.abdurrahmane@gmail.com"
  },
  "license": "MIT",
  "main": "dist/realtime-hooks.umd.js",
  "module": "dist/realtime-hooks.es.js",
  "types": "dist/index.d.ts",
  "homepage": "https://github.com/malkiii/realtime-hooks#readme",
  "files": [
    "dist/",
    "package/README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/malkiii/realtime-hooks.git"
  },
  "bugs": {
    "url": "https://github.com/malkiii/realtime-hooks/issues"
  },
  "scripts": {
    "build": "rm -rf dist/ && pnpm prebuild && tsc && vite build",
    "format": "prettier --write package/**/*.{ts,tsx}",
    "lint": "eslint package --ext ts,tsx --cache",
    "prebuild": "pnpm lint && bash package/export-hooks.sh",
    "test": "vitest run --coverage",
    "test:watch": "clear && vitest watch",
    "prepublish": "node -pe \"require('./package.json').version\" | echo \"v$(cat)\" | xargs -I {} git tag {} && git push --tags"
  },
  "sideEffects": false,
  "dependencies": {
    "date-fns": "^2.30.0",
    "fast-deep-equal": "^3.1.3",
    "qrcode": "^1.5.3",
    "ua-parser-js": "^1.0.35"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.1.0",
    "@testing-library/react": "^14.0.0",
    "@types/node": "^20.5.9",
    "@types/qrcode": "^1.5.2",
    "@types/react": "^18.0.37",
    "@types/react-dom": "^18.0.11",
    "@types/ua-parser-js": "^0.7.36",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.2.1",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/coverage-v8": "^0.34.3",
    "eslint": "^8.48.0",
    "jsdom": "^22.1.0",
    "prettier": "^3.0.3",
    "typescript": "^5.0.2",
    "vite": "^4.3.9",
    "vite-plugin-banner": "^0.7.0",
    "vite-plugin-dts": "^3.0.2",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.32.2"
  },
  "peerDependencies": {
    "react": ">=18.2.0",
    "react-dom": ">=18.2.0"
  },
  "packageManager": "pnpm@8.6.2",
  "engines": {
    "node": ">=16"
  },
  "keywords": [
    "hooks",
    "react-hooks",
    "react-use",
    "use",
    "library",
    "react",
    "next",
    "frontend",
    "ts",
    "js"
  ]
}
