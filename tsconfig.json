{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "strict": true,
    "declaration": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./package/*"]
    }
  },
  "include": ["package/src"],
  "exclude": ["node_modules", "dist", "*.test.ts*"]
}
