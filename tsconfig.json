{
  "compilerOptions": {
    "target": "ES2022",
    "moduleResolution": "Node",
    "rootDir": "./package/src",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "strict": true,
    "declaration": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./package/*"]
    }
  },
  "include": ["package/src"],
  "exclude": ["node_modules", "dist", "./**/*.test.ts*"]
}
